{
    "compilerOptions": {
        "lib": ["ES2020"],
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "strictPropertyInitialization": false
    }
}
